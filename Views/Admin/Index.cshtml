@{
    ViewBag.Title = "Admin Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .admin-sidebar {
        width: 250px;
        background-color: #343a40;
        color: #fff;
        padding: 20px;
        height: 100vh;
        position: fixed;
        top: 0;
        left: 0;
    }

    .admin-sidebar h3 {
        color: #ffc107;
        margin-bottom: 20px;
    }

    .admin-sidebar ul {
        list-style: none;
        padding: 0;
    }

    .admin-sidebar ul li {
        margin: 15px 0;
    }

    .admin-sidebar ul li a {
        color: #fff;
        text-decoration: none;
        display: block;
        transition: 0.3s;
    }

    .admin-sidebar ul li a:hover {
        color: #ffc107;
        padding-left: 5px;
    }

    .admin-main-content {
        margin-left: 270px;
        padding: 30px;
    }

    .dashboard-cards {
        display: flex;
        gap: 30px;
        flex-wrap: wrap;
    }

    .card {
        flex: 1;
        min-width: 200px;
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        text-align: center;
    }

    .card h4 {
        margin-bottom: 10px;
    }

    .card .value {
        font-size: 24px;
        font-weight: bold;
        color: #007bff;
    }
</style>

<div class="admin-sidebar">
    <h3>Admin Panel</h3>
    <ul>
        <li><a href="@Url.Action("Index", "Admin")">Dashboard</a></li>
        <li><a href="@Url.Action("Books", "Admin")">Quản lý sách</a></li>
        <li><a href="@Url.Action("Users", "Admin")">Quản lý người dùng</a></li>
        <li><a href="@Url.Action("Orders", "Admin")">Quản lý đơn hàng</a></li>
    </ul>
</div>

<div class="admin-main-content">
    <h2>Thống kê tổng quan</h2>
    <div class="dashboard-cards">
        <div class="card">
            <h4>Tổng sách</h4>
            <div class="value">@ViewBag.TotalBooks</div>
        </div>
        <div class="card">
            <h4>Người dùng</h4>
            <div class="value">@ViewBag.TotalUsers</div>
        </div>
        <div class="card">
            <h4>Đơn hàng</h4>
            <div class="value">@ViewBag.TotalOrders</div>
        </div>
        <div class="card">
            <h4>Doanh thu</h4>
            <div class="value">@String.Format("{0:N0} ₫", ViewBag.TotalRevenue)</div>
        </div>
    </div>
</div>
